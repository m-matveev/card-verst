{
  "name": "rfi_gibdd",
  "cssFiles": [
    "css/reset.css",
    "css/style.min.css"
  ],
  "jsFiles": [
    "js/mask.min.js",
    "js/scripts.js"
  ],
  "languageSwitcherStyle": "dropdown",
  "cvcRcSwitcherStyle": null,
  "formOptionalInputs": [
    "email",
    "phone"
  ],
  "layout": [
    "root-node.card-wrapper",
    "const-form-element-begin",
    [
      "left-side-root.card-side card-left",
      [
        "type1.card_type_icon card_type_detected"
      ],
      [
        "type2.card_type_icon card_type_visa"
      ],
      [
        "type3.card_type_icon card_type_maestro"
      ],
      [
        "type4.card_type_icon card_type_mastercard"
      ],
      [
        "num-box.card-number",
        "const-card-pan"
      ],
      [
        "valid-box.card-valid",
        "const-card-valid"
      ]
    ],
    [
      "right-side-root.card-side card-right",
      [
        "cvc-box.card-cvc",
        "const-card-cvc"
      ]
    ],
    "const-submit-btn"
  ],
  "payTransferLayout": [
    "page",
    "HEADER_ADAPTIVE",
    "PAYTRANSFER_FORM_ADAPTIVE",
    "WINDOW_SIZE_TRIGGER",
    "FOOTER_ADAPTIVE"
  ],
  "successLayout": [
    "page",
    "HEADER_ADAPTIVE",
    "SUCCESS_ADAPTIVE",
    "SUCCESS_TRIGGER",
    "WINDOW_SIZE_TRIGGER",
    "FOOTER_ADAPTIVE"
  ],
  "errorLayout": [
    "page",
    "HEADER_ADAPTIVE",
    "ERROR_ADAPTIVE",
    "ERROR_TRIGGER",
    "WINDOW_SIZE_TRIGGER",
    "FOOTER_ADAPTIVE"
  ],
  "acquireLayout": "ACQUIRE_TRIGGER",
  "fragments": {
    "const-form-element-begin": "<form id='payment_form' method='post' action='/site/pay'>",
    "const-card-pan": "<span class='input_box'><input id='card_num' name='PayForm[card]' tabindex='1' class='input__control' placeholder='Номер карты' maxlength='24' autocomplete='false' type='tel'></span>",
    "const-card-valid": "<label class=''>VALID THRU</label><span class='input_box'><input name='PayForm[exp_month]' id='card_mm' class='input__control' tabindex='2' placeholder='MM' maxlength='2' autocomplete='false' type='tel'></span><label class='divider'>/</label><span class='input_box'><input name='PayForm[exp_year]' id='card_yy' class='input__control' tabindex='3' placeholder='ГГ' maxlength='2' autocomplete='false' type='tel'></span>",
    "const-card-cvc": "<span class='input_box'><input name='PayForm[cvc2]' id='card_cvc' class='input__control' tabindex='4' placeholder='CVC' maxlength='3' autocomplete='false' type='tel'></span><label class=''>Три цифры на обороте карты</label>",
    "const-submit-btn": "<button id='submit_btn' type='button' tabindex='5' class='submit'>Далее</button>"
  }
}
